{
  "name": "mengtr",
  "private": false,
  "scripts": {
    "build:common": "pnpm --filter @mengtr/vue3-common build",
    "publish:common": "pnpm --filter @mengtr/vue3-common pub --no-git-checks",
    "build:antdv": "pnpm --filter @mengtr/vue3-antdv build",
    "publish:antdv": "pnpm --filter @mengtr/vue3-antdv pub --no-git-checks",
     "build:element": "pnpm --filter @mengtr/vue3-element build",
    "publish:element": "pnpm --filter @mengtr/vue3-element pub --no-git-checks",
    "build:all": "pnpm build:common && pnpm build:antdv && pnpm build:element",
    "publish:all": "pnpm publish:common && pnpm publish:antdv && pnpm publish:element"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^7.0.1",
    "@element-plus/icons-vue": "^2.3.2",
    "@wangeditor/editor": "^5.1.23",
