    "ant-design-vue": "^4.2.4",
    "element-plus": "^2.12.0",
    "lodash-es": "^4.17.0",
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.17",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/tsconfig": "^0.7.0",
    "less": "^4.3.0",
    "terser": "^5.44.1",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vue-tsc": "^2.2.8"
  },
  "pnpm": {
    "overrides": {
      "vue": "^3.5.0",
      "lodash-es": "^4.17.0"
    }
  }
}